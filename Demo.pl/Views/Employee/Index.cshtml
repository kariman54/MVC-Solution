@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}


<a asp-action="Create" class="btn-outline-light">Add new Employee</a>
@if (Model.Count() > 0)
{

    <h3>All Employee</h3>
    <br />
    <div class="m-2">
        <form class="row offset-2" >
    <div class="col-8">
<input class="form-control" type="text" name="searchvalue" placeholder="employye's name">
    </div>
    <div class="col-4">
        <input type="submit" class="btn-secondary" vlue="search">
    </div>
    </form>
    </div>
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                
                <td>@Html.DisplayNameFor(d=>d.Name)</td>
                <td>@Html.DisplayNameFor(d=>d.Image)</td>
                <td>@Html.DisplayNameFor(d=>d.Age)</td>
                <td>@Html.DisplayNameFor(d=>d.Address)</td>
                <td>@Html.DisplayNameFor(d=>d.Hiredate)</td>
                <td>@Html.DisplayNameFor(d=>d.Isactive)</td>
                <td>@Html.DisplayNameFor(d=>d.Salary)</td>
                <td>@Html.DisplayNameFor(d=>d.Department)</td>
                <td>@Html.DisplayNameFor(d=>d.Email)</td>
                <td>@Html.DisplayNameFor(d=>d.Phonenumber)</td>
                <td>Details</td>
                <td>update</td>
                <td>delete</td>

            </tr>
        </thead>
        <tbody>

            @foreach (var employee in Model)
            {
                <tr>
                    
                    <td>@employee.Name</td>
                    <td><img src="~/files/images/@employee.Imagename" class="rounded" height="40" width="40" alt="empimage"/></td>
                    <td>@employee.Age</td>
                    <td>@employee.Address</td>
                    <td>@employee.Hiredate</td>
                    <td>
                        @if(employee.Isactive == true)
                        {
                            <i class="fa-solid fa-circle" style="color:green"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle" style="color:red"></i>

                        }
                    </td>
                    <td>@employee.@Html.DisplayFor(e=>employee.Salary)</td>
                    <td>@employee.@Html.DisplayFor(e=>employee.Department.Name)</td>

                    <td>@employee.@Html.DisplayFor(e=>employee.Email)</td>
                    <td>@employee.Phonenumber</td>
                    <partial name="_ButtonPartialView" model="@employee.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5  alert alert-warning">
        <h3>
            there is no employee
        </h3>
    </div>
}
